{
	"manifest_version": 2,
	"name": "Chrome Passwords",
	"version": "1.3.1",
	"default_locale": "en",
	"minimum_chrome_version": "38",

	"permissions": [
		"activeTab",
		"declarativeContent",
		"storage"
	],

	"icons": {
		"48": "res/icon48.png",
		"128": "res/icon128.png"
	},

	"background": {
		"scripts": [
			"background.js",
			"lib/traceur-runtime.js",
			"lib/setImmediate-polyfill.js",
			"lib/hmac-sha256.js",
			"lib/lib-typedarrays-min.js",
			"lib/scrypt-asm.js",
			"lib/scrypt.js",
			"lib/mpw.js"
		],
		"persistent": false
	},

	"content_scripts": [{
		"matches": [ "*://*/*" ],
		"js": [ "content.js" ],
		"all_frames": true
	}],

	"web_accessible_resources": [
		"res/*.png"
	],

	"options_page": "options.html",

	"page_action": {
		"default_title": "Chrome Passwords",
		"default_popup": "popup.html",
		"default_icon": "res/icon38.png"
	},

	"content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",

	"commands": {
		"_execute_page_action": {
			"suggested_key": {
				"default": "Alt+P",
				"windows": "Alt+P",
				"mac": "Alt+P"
			}
		}
	}
}
